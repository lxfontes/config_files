export PATH=$HOME/bin:/usr/local/bin:/usr/local/sbin:$PATH

alias bi='bundle install --path=.bundle/gems'
alias be='bundle exec'

GOVERSION=1.7.3
export GOROOT=/usr/local/Cellar/go/$GOVERSION/libexec
export GOPATH=$HOME/code
export PATH=$PATH:$GOROOT/bin:$GOPATH/bin

alias vi=nvim
alias vim=nvim
export EDITOR=nvim
export VISUAL=nvim

export JAVA_HOME="$(/usr/libexec/java_home)"

## aws
export EC2_HOME="/usr/local/Cellar/ec2-api-tools/1.7.1.0/libexec"
export AWS_ELB_HOME="/usr/local/Cellar/elb-tools/1.0.34.0/libexec"

export ANDROID_HOME=/usr/local/opt/android-sdk
export PATH=$PATH:$ANDROID_HOME/platform-tools

## Z
source /usr/local/etc/profile.d/z.sh

alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias urlencode='python -c "import sys, urllib as ul; print ul.quote_plus(sys.argv[1]);"'
alias dev_layout='tmux split-window -h -p 40 && tmux split-window -v'


bindkey "^r" history-incremental-pattern-search-backward
KEYTIMEOUT=1

kp() {
  kubectl get pod -l $1 -o name | cut -d/ -f2-
}
